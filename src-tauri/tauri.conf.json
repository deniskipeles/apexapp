{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "apexapp",
  "version": "0.1.0",
  "identifier": "com.deniskipeles.apexapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "apexapp",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:5000 ws://localhost:5000 data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/apexkit",
      "binaries/cloudflared"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/hooks.nsh",
        "installMode": "perMachine"
      }
    }
  }
}
