{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "apexkit", "cmd": "program", "args": true },
        { "name": "cloudflared", "cmd": "program", "args": true }
      ]
    }
  ]
}